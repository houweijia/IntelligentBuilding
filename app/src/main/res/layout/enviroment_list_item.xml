<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <ImageView
        android:id="@+id/transducer_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:src="@mipmap/environment"
        android:layout_centerVertical="true"/>

    <TextView
        android:id="@+id/transducer_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="40dp"
        android:text="20"/>

    <TextView
        android:id="@+id/transducer_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="温度"
        android:layout_alignBaseline="@+id/transducer_data"
        android:layout_alignBottom="@+id/transducer_data"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
